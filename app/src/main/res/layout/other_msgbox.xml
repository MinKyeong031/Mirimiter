<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/OtcharImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/who"
        />
    <TextView
        android:id="@+id/OtnameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/OtcharImg"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/OtmsgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello android"
        android:layout_below="@+id/OtnameView"
        android:layout_toRightOf="@id/OtcharImg"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:background="@drawable/back_et_othermsgbox"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/timeNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:35"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/OtmsgView"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/OtmsgView"/>
</RelativeLayout>

