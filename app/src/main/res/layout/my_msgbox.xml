<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/MycharImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/who"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/MynameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="me"
        android:textColor="#333333"
        android:layout_toLeftOf="@+id/MycharImg"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/MymsgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교무실에 대한 질문입니다."
        android:layout_below="@+id/MynameView"
        android:layout_toLeftOf="@id/MycharImg"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:background="@drawable/back_et_mymsgbox"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/timeNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:35"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/MymsgView"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/MymsgView"/>
</RelativeLayout>


