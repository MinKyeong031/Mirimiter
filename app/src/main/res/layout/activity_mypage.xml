<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/draw_layout">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main">
        <ImageButton
            android:id="@+id/menu_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/editback"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="start"
            app:srcCompat="@drawable/menu_btn" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/who"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="익명"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/textColor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/colorChange_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginRight="2dp"
            android:background="@color/comment"
            android:layout_toLeftOf="@id/AccountChange_btn"
            android:text="상징 컬러 변경"
            android:textColor="@color/textColor"
            android:textSize="20dp" />

        <Button
            android:id="@+id/AccountChange_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/colorChange_btn"
            android:background="@color/comment"
            android:text="계정 수정"
            android:textColor="@color/textColor"
            android:textSize="20dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/logo2"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/Logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColor"
        android:layout_marginTop="60dp"
        android:textColor="@color/main"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20dp"
        android:text="로그아웃" />
    <Button
        android:id="@+id/killAccount_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColor"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/main"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="회원탈퇴"/>
    </LinearLayout>
    <include layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>