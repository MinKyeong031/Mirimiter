<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/OtcharImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/who" />

    <TextView
        android:id="@+id/OtnameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/OtcharImg"
        android:text="Chat"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/OtmsgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OtnameView"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/OtcharImg"
        android:background="@drawable/back_et_othermsgbox"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:text="관련 교무실은 3층 우측에 있습니다."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/timeNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/OtmsgView"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/OtmsgView"
        android:text="13:35"
        android:textSize="12sp" />
</RelativeLayout>

